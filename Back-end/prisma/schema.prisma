generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid()) @db.Uuid
  name      String
  auth0Id   String   @unique // Auth0 user ID for linking users to Auth0 account
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  library   Library?
}

model Library {
  id        String   @id @default(uuid()) @db.Uuid
  name      String
  userId    String   @unique @db.Uuid
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  books     Book[]
  user      User     @relation(fields: [userId], references: [id])
}

model Book {
  id           String         @id @default(uuid())
  title        String
  authors      String[]
  categories   BookCategory[]
  languages    BookLanguage[]
  borrowStatus BorrowStatus
  status       BookStatus
  libraryId    String         @db.Uuid
  library      Library        @relation(fields: [libraryId], references: [id])
}

enum BookCategory {
  Unknown
  Fiction
  Fantasy
  ChildrenStory
  Adventure
  Novel
  Mystery
  Crime
  Detective
}

enum BookLanguage {
  English
  Chinese
  Hindi
  Spanish
  French
  Arabic
  Bengali
  Portuguese
  Russian
  Urdu
  Indonesian
  German
  Japanese
  Swahili
  Marathi
  Telugu
  Turkish
  Korean
  Tamil
  Vietnamese
}

enum BookStatus {
  Visible
  Hidden
  Removed
}

enum BorrowStatus {
  Borrowed
  Available
}
